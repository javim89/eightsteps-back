{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "quotes": ["error", "double"],
        "no-unused-expressions": ["error", { "allowTernary": true }],
        "max-len": ["error", { "comments": 150, "code": 150 }],
        "import/extensions": [
            "error",
            {
                "js": "ignorePackages"
            }
        ]
    }
}
